<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FAF9F7">

        <RelativeLayout
            android:id="@+id/id_bottom_location_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/id_bottom_bar_image_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/tab_locaiton_selector" />
                <TextView
                    android:id="@+id/id_bottom_bar_text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="设备"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="#5B5B5B" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/id_bottom_msg_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/id_bottom_bar_image_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_msg_selector" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/id_bottom_bar_text_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_bottom_bar_image_msg"
                    android:layout_marginTop="5dp"
                    android:text="消息"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="#5B5B5B" />

                <View
                    android:visibility="gone"
                    android:background="@drawable/shape_view_tip"
                    android:id="@+id/id_bottom_msg_tip"
                    android:layout_alignRight="@+id/id_bottom_bar_image_msg"
                    android:layout_alignTop="@+id/id_bottom_bar_image_msg"
                    android:layout_width="8dp"
                    android:layout_height="8dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_bottom_mine_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/id_bottom_bar_image_config"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/tab_mine_selector" />
                <TextView
                    android:id="@+id/id_bottom_bar_text_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="我的"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="#5B5B5B" />
            </LinearLayout>
        </RelativeLayout>



    </LinearLayout>
</RelativeLayout>
