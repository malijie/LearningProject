<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_bar_yellow</item>
        <item name="colorPrimaryDark">@color/title_bar_yellow</item>
        <item name="colorAccent">@color/font_grey</item>
    </style>

    <style name="AppThemeImmerse" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/font_grey</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_bar_yellow</item>
        <item name="colorPrimaryDark">#FCA140</item>
        <item name="colorAccent">@color/gray</item>
    </style>
    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_bar_yellow</item>
        <item name="colorPrimaryDark">#FBB146</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="register_et">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/font_grey</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="text_info_window">
        <item name="android:textColor">@color/font_grey</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="text_mine">
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@color/font_dark_gray</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="text_login">
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="edit_text_login">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColorHint">@color/font_hint_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit_style">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColorHint">@color/font_hint_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="hide_input">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="edit_under_line">
        <item name="android:background">@color/grey_line</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="dialog" parent="AlertDialog.AppCompat">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/white</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- popupwindow 动画 -->
    <style name="pop_window_anim">
        <item name="android:windowEnterAnimation">@anim/pop_window_in</item>
        <item name="android:windowExitAnimation">@anim/pop_window_out</item>
    </style>

    <style name="test" parent="AlertDialog.AppCompat">
        <item name="android:textColor">@color/red</item><!--边框-->
    </style>

    <style name="edit_round_input_style">
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/bg_edit_add_sn</item>
        <item name="android:textColorHint">@color/font_hint_gray</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/white</item>
        <item name="android:divider">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

</resources>
